<h1>User profile</h1>
<hr>
<div class="container">
    <div class="row">
        <form action="/profile/edit" method="post">
            <label>Your avatar:<img id="avatar-img" src="{{avatar}}">
                <button name="avatar" value="edit-avatar">Change your avatar</button>
            </label>
            <br>
            <label>User name: {{username}}
                <button name="username" value="edit-username">Change your user name</button>
            </label>
            <br>
            <label>Your email: {{email}}
                <button name="email" value="edit-email">Change your email</button>
            </label>
            <button name="submit" value="submit" type="submit">Submit changes</button>
        </form>
    </div>
    <div>

    <hr>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
            delete account
        </button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete account</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete your account?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <form action="/profile/delete" method="post">
                            <button class="btn btn-danger" name="delete" value="delete-account" type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>

</div>