<h1>My cookbook</h1>
<hr>
<div class="row">
  {{#each recipes}}
    <div class="column">
      <div class="card">
        <img src="{{imageUrl}}" class="card-img-top" alt="{{title}}">
        <div class="card-body">
          <h4 class="card-title">{{title}}</h4>
          <p class="card-text">{{shortDescription}}</p>
          <p class="card-author">Recipe by {{creator.0.username}}</p>
          <a href="/recipe/detail/{{_id}}">View details</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>There are no recipes!</p>
  {{/each}}
</div>