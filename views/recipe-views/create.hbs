<h1>Add a new recipe</h1>
<hr>
<div class="container">
    <form action="/recipe/create-recipe" method="post" class="form detail" enctype="multipart/form-data">
        <div class="progressbar">
            <div class="progress" id="progress"></div>
            <div class="progress-step progress-step-active" data-title="Basic info"></div>
            <div class="progress-step" data-title="Ingredients"></div>
            <div class="progress-step" data-title="Cooking Steps"></div>
            <div class="progress-step" data-title="Picture"></div>
        </div>

        <div class="form-step form-step-active">
            <label for="title">Name of your recipe</label>
            <input type="text" name="title" id="title" >
            <br>
            <label for="shortDescription">Short description</label>
            <textarea name="shortDescription" id="shortDescription" maxlength="100" cols="50" rows="2"
                placeholder="Describe your recipe in a few words"></textarea>
            <br>
            <label>Type of dish</label>
            <div>
                <label for="dishtType">
                    <select name="dishtType" id="dishtType">
                        <option value="Appetizer">Appetizer</option>
                        <option value="Breakfast">Breakfast</option>
                        <option value="Dessert">Dessert</option>
                        <option value="Drink">Drink</option>
                        <option value="Main course">Main course</option>
                        <option value="Salad">Salad</option>
                        <option value="Sauce">Sauce</option>
                        <option value="Side dish">Side dish</option>
                        <option value="Snack">Snack</option>
                        <option value="Soup">Soup</option>
                        <option value="Starter">Starter</option>
                        <option value="Other">Other</option>
                    </select>
                </label>
            </div>
            <div>
                <label for="diet-restrictions">Diet restrictions:</label>
                <input type="checkbox" name="vegan" value="Vegan" id="vegan">
                <label for="vegan">Vegan</label>
                <input type="checkbox" name="vegetarian" value="Vegetarian" id="vegetarian">
                <label for="vegetarian">Vegetarian</label>
                <input type="checkbox" name="glutenFree" value="Gluten-free" id="gluten-free">
                <label for="glutenFree">Gluten-free</label>
            </div>
            <div>
                <label for="level">Level</label>
                <label>
                    <select name="level" id="level">
                        <option value=""></option>
                        <option value="Easy">Easy</option>
                        <option value="Medium">Medium</option>
                        <option value="Fancy">Fancy</option>
                    </select>
                </label>
            </div>
            <div>
                <label for="cuisine">Cuisine</label>
                <input type="text" name="cuisine" id="cuisine" placeholder="Italian, Japanese, etc.">
            </div>
            <div>
                <h4>Do you wanna share your recipe?</h4>
                <input type="checkbox" name="public" value="public">
                <label for="public"> I want to share this recipe with the community</label>
            </div>
            <button type="button" class="btn btn-next btn-primary btn-sm">Next</button>
        </div>

        <div class="form-step">
            <h3>Ingredients</h3>
            <ul class="list ingredients"></ul>
            <div>
                <textarea class="ingredientInput" type="text" id="ingredients" cols="50" rows="1"
                    placeholder="Add ingredients"></textarea>
                <input type="hidden" name="ingredientsList" value="" id="ingredientsList">
                <button type="button" class="btn add-ingredient-btn btn-success btn-sm" id="ingredient-btn">Add ingredient</button>
            </div>
            <br>
            <button type="button" class="btn btn-prev btn-secondary btn-sm">Back</button>
            <button type="button" class="btn btn-next btn-primary btn-sm">Next</button>
        </div>

        <div class="form-step">
            <h3>Cooking steps</h3>
            <ol class="stepList"></ol>
            <div>
                <textarea class="stepsInput" type="text" id="steps" placeholder="Add your cooking steps here" cols="50"
                    rows="3"></textarea>
                 <input type="hidden" name="stepsList" value="" id="stepsList">
                <button type="button" class="btn add-step-btn btn-success btn-sm" id="steps-btn">Add cooking step</button>
            </div>

            <br>
            <button type="button" class="btn btn-prev btn-secondary btn-sm">Back</button>
            <button type="button" class="btn btn-next btn-primary btn-sm ">Next</button>
        </div>

        <div class="form-step">
            <h3>Picture</h3>
            <div>
                <input type="file" id="imageUrl" name="imageUrl">
                <h6>Upload a photo of your dish</h6>
            </div>
            <button type="button" class="btn btn-prev btn-secondary btn-sm">Back</button>
            <button id="submit-btn"  class="btn btn-success">Save my recipe</button>
        </div>

    </form>
</div>

<script src="/js/create-recipe.js"></script>