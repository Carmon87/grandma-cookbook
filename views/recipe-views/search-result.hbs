{{> navbar }}
<h1>Search result</h1>
{{#if errorMessage}}
<div class="nothing-found">
    {{errorMessage}}
    <a href="/recipe/search"><button class="btn">Try again</button></a>
</div>
{{else}}
<div class="row">
    {{#each recipes}}
    <div class="column">
        <div class="card">
            <img src="{{imageUrl}}" class="card-img-top" alt="{{title}}">
            <div class="card-body">
                <h4 class="card-title">{{title}}</h4>
                <p class="card-author">Recipe by {{creator.0.username}} <img src="{{creator.0.avatar}}" alt="avatar" class="mini-avatar"></p>
                <p class="card-text">{{shortDescription}}</p>
                <a href="/recipe/detail/{{_id}}"><button class="btn btn-primary">View details</button></a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}